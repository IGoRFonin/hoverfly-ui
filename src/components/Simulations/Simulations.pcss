$b: .simulations;

$(b) {
    &__header {
        margin-bottom: 16px;
    }

    &__active-simulations-header {
        font-weight: 600;
    }

    &__menu {
        display: flex;
        justify-content: space-between;

        max-width: 1336px;
        margin-bottom: 32px;
    }

    &__active-simulations {
        display: grid;
        grid-template-columns: 186px 103px;
        gap: 16px;
        align-items: center;
    }

    &__fields {
        display: grid;
        flex-direction: flex-end;
        grid-template-columns: 343px 177px;
        gap: 14px;
        align-items: center;
    }

    &__nav-link {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 32px;
        height: 32px;

        border-radius: 24px;

        text-decoration: none;

        background-color: #00B956;
        cursor: pointer;

        &_disabled {
            background-color: #D8D8D8;
        }
    }

    &__button-content {
        color: #FFFFFF;
        font-weight: 600;
        white-space: nowrap;
    }

    &__plus-icon {
        width: 10px;
        height: 10px;
        margin-right: 6px;
        margin-bottom: 1px;

        fill: #FFFFFF;
    }

    &__input {
        border-radius: 12px;
    }

    &__tile {
        margin-bottom: 32px;
        padding: 36px 22px;
    }

    &__list {
        display: flex;
        flex-direction: column;

        gap: 16px;
    }

    &__item {
        display: flex;
        align-items: center;
        justify-content: space-between;
        height: 40px;
        padding: 0 12px;
        border-radius: 12px;

        cursor: pointer;

        &:hover {
            background: #EEEEEE;
        }
    }

    &__edit-btn {
        margin-right: 8px;

        cursor: pointer;

        fill: #404D46;

        &_disabled {
            fill: #CCCCCC;
        }
    }

    &__delete-btn {
        box-sizing: content-box;
        width: 22px;
        height: 22px;
        padding: 8px;
        border-radius: 12px;

        cursor: pointer;



        &:not(&_disabled):hover {
            background: #CCCCCC;
        }

        &_disabled {
            fill: #CCCCCC;
        }
    }

    &__pagination-wrap {
        display: flex;
        justify-content: center;
    }

    &__delete-loader {
        margin-left: 16px;
    }

    &__popup-buttons {
        display: flex;
        justify-content: space-between;
    }

    &__preloader-item {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    &__preloader-circle {
        margin-right: 12px;
    }
}
